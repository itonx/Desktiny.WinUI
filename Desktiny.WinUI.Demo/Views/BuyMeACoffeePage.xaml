<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Desktiny.WinUI.Demo.Views.BuyMeACoffeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Desktiny.WinUI.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Spacing="10">
            <Button
                x:Uid="GoBack"
                HorizontalAlignment="Center"
                Click="Button_Click" />
            <TextBlock x:Uid="BuyMeACoffeeMessage" HorizontalAlignment="Center" />
            <HyperlinkButton HorizontalAlignment="Center" NavigateUri="https://buymeacoffee.com/itonx">https://buymeacoffee.com/itonx</HyperlinkButton>
        </StackPanel>
    </Grid>
</Page>
